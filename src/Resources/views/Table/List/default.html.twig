{% macro list(report, labels, values) %}

    {% import '@SyliusResource/Macros/buttons.html.twig' as buttons %}

    {% if values|length > 0 %}
        <table class="ui sortable stackable celled table">
            <thead>
            <tr>
                <th>{{ '#' }}</th>
                {% for label in labels %}
                    <th>{{ ('odiseo_sylius_report_plugin.ui.table.'~label)|trans }}</th>
                {% endfor %}
            </tr>
            </thead>
            <tbody>
            {% for valueData in values %}
                {% set currency_code = valueData['currency_code'] is defined ? valueData['currency_code'] : null %}
                <tr id="{{ loop.index }}">
                    <td>{{ loop.index }}</td>
                    {% for key, value in valueData %}
                        {% if currency_code and key in ['total_cost', 'amount_total'] %}
                            <td>{{ value|sylius_format_money(currency_code, sylius.localeCode) }}</td>
                        {% else %}
                            <td>{{ value }}</td>
                        {% endif %}
                    {% endfor %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <span>{{ 'odiseo_sylius_report_plugin.ui.there_are_no_reports_results'|trans }}</span>
    {% endif %}

{% endmacro %}
